{
  "realm": "area-check",
  "enabled": true,
  "sslRequired": "none",
  "registrationAllowed": true,
  "resetPasswordAllowed": true,
  "browserFlow": "browser",
  "defaultRoles": [
    "offline_access",
    "uma_protection",
    "USER"
  ],
  "editUsernameAllowed": false,
  "loginWithEmailAllowed": true,
  "internationalizationEnabled": false,
  "roles": {
    "realm": [
      {
        "name": "USER",
        "description": "Regular user role for accessing the application"
      },
      {
        "name": "ADMIN",
        "description": "Administrator role for accessing admin panel"
      }
    ]
  },
  "clients": [
    {
      "clientId": "area-check-frontend",
      "protocol": "openid-connect",
      "publicClient": true,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "redirectUris": [
        "http://localhost:3000/*",
        "http://localhost:3000/"
      ],
      "webOrigins": [
        "http://localhost:3000",
        "http://localhost:3000/"
      ],
      "attributes": {
        "pkce.code.challenge.method": "S256",
        "post.logout.redirect.uris": "+"
      },
      "protocolMappers": [
        {
          "name": "maxRadius-mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "config": {
            "user.attribute": "maxRadius",
            "claim.name": "maxRadius",
            "jsonType.label": "double",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        }
      ]
    }
  ],
  "users": [
    {
      "username": "demo",
      "email": "demo@area-check.local",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Demo",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "demo",
          "temporary": false
        }
      ],
      "realmRoles": [
        "USER"
      ],
      "attributes": {
        "maxRadius": ["2.0"]
      }
    },
    {
      "username": "admin",
      "email": "admin@area-check.local",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Admin",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "admin",
          "temporary": false
        }
      ],
      "realmRoles": [
        "ADMIN",
        "USER"
      ],
      "attributes": {
        "maxRadius": ["5.0"]
      }
    },
    {
      "username": "user1",
      "email": "user1@area-check.local",
      "enabled": true,
      "emailVerified": true,
      "firstName": "User",
      "lastName": "One",
      "credentials": [
        {
          "type": "password",
          "value": "user1",
          "temporary": false
        }
      ],
      "realmRoles": [
        "USER"
      ],
      "attributes": {
        "maxRadius": ["1.5"]
      }
    }
  ]
}
